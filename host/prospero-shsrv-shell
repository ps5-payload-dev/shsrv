SHSRV_PORT=2323

if [ "$#" -lt 1 ]; then
    echo "usage: $0 <HOST> [PORT]"
    exit 1
fi

SHSRV_HOST=$1

if [ "$#" -gt 1 ]; then
    SHSRV_PORT=$2
fi

if [ -x "$(command -v "rlwrap")" ]; then
   rlwrap telnet $SHSRV_HOST $SHSRV_PORT
else
    telnet $SHSRV_HOST $SHSRV_PORT
fi
